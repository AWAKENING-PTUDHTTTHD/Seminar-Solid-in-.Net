@model IEnumerable<Model.Customer>

@{
    ViewBag.Title = "Customers List";
}

<h2>Customers List</h2>

<p>
    @Html.ActionLink("Create New", "CreateCustomer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCustomer", new { id=item.CustomerId }) |
           
            @Html.ActionLink("Delete", "DeleteCustomer", new { id=item.CustomerId })
            
        </td>
    </tr>
}


</table>
